{
  "site": {
    "title": "我的博客",
    "description": "基于 GitHub Issues 的个人博客",
    "url": "https://username.github.io/blog-repo",
    "author": "username",
    "avatar": "https://github.com/username.png",
    "favicon": "https://github.com/username.png",
    "language": "zh-CN",
    "date": "2024-01-01"
  },
  "github": {
    "owner": "username",
    "repo": "blog-repo",
    "token": "process.env.GITHUB_TOKEN"
  },
  "social": {
    "github": "https://github.com/username"
  },
  "build": {
    "postsPerPage": 10,
    "excerptLength": 15,
    "dateFormat": "yyyy-MM-dd"
  },
  "features": {
    "comments": true,
    "search": true,
    "categories": true,
    "archives": true,
    "imageProxy": true
  },
  "imageProxy": {
    "enabled": true,
    "baseUrl": "https://images.weserv.nl/?url=",
    "description": "使用 weserv.nl 图片代理服务加速图片加载。设置 enabled 为 false 可关闭此功能"
  },
  "seo": {
    "keywords": ["博客", "GitHub Issues", "个人网站", "技术分享"],
    "generateSitemap": true,
    "description": "SEO 优化配置。keywords 为网站关键词数组，generateSitemap 控制是否生成 sitemap.xml"
  },
  "comments": {
    "enabled": true,
    "provider": "giscus",
    "giscus": {
      "repo": "username/blog-repo",
      "repoId": "R_kgDOH...",
      "category": "General",
      "categoryId": "DIC_kwDOH...",
      "mapping": "pathname",
      "strict": "0",
      "reactionsEnabled": "1",
      "emitMetadata": "0",
      "inputPosition": "bottom",
      "theme": "preferred_color_scheme",
      "lang": "zh-CN"
    },
    "utterances": {
      "repo": "username/blog-repo",
      "issueTerm": "pathname",
      "label": "comment",
      "theme": "github-light"
    },
    "gitalk": {
      "clientID": "your-github-app-client-id",
      "clientSecret": "your-github-app-client-secret",
      "repo": "blog-repo",
      "owner": "username",
      "admin": ["username"],
      "id": "pathname",
      "distractionFreeMode": false,
      "language": "zh-CN"
    },
    "description": "评论系统配置。provider 可选值：giscus, utterances, gitalk, none。enabled 为 false 时禁用所有评论功能"
  },
  "pages": {
    "about": {
      "enabled": true,
      "title": "关于我",
      "content": "这里是关于页面的内容，支持 Markdown 格式。\n\n## 个人简介\n\n在这里写下你的个人介绍...\n\n## 技能专长\n\n- 前端开发\n- 后端开发\n- 数据库设计\n\n## 联系方式\n\n- 邮箱：your-email@example.com\n- GitHub：https://github.com/yourusername",
      "description": "关于页面配置。enabled 控制是否生成关于页面，content 支持 Markdown 格式"
    },
    "friends": {
      "enabled": true,
      "title": "友情链接",
      "subtitle": "这里收录了一些优秀的博客和网站",
      "links": [
        {
          "name": "GitHub",
          "url": "https://github.com",
          "description": "全球最大的代码托管平台",
          "avatar": "https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png"
        },
        {
          "name": "示例博客",
          "url": "https://example.com",
          "description": "这是一个示例友链",
          "avatar": "https://via.placeholder.com/64x64"
        }
      ],
      "description": "友链页面配置。enabled 控制是否生成友链页面，links 数组包含友链信息"
    }
  }
}
